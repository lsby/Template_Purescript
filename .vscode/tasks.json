{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch:web",
      "type": "npm",
      "script": "watch:web",
      "problemMatcher": [
        {
          "pattern": {
            "kind": "file",
            "regexp": "(ðŸš¨ Build failed.)",
            "file": 1,
            "message": 1
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^Server running at .*$",
            "endsPattern": "^âœ¨ Built in .*$|.*\\..*:.*:.*$"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch:ts",
      "type": "npm",
      "script": "watch:ts",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch:purs",
      "type": "npm",
      "script": "watch:purs",
      "problemMatcher": [
        {
          "pattern": {
            "kind": "file",
            "regexp": "^(Error found:.*|Error (.*?) of (.*?))$",
            "file": 1,
            "message": 1
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "\\[info\\] File changed, triggered a build: .*$",
            "endsPattern": "^\\[info\\] Type help for available commands. Press enter to force a rebuild.$"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch:genTypes",
      "type": "npm",
      "script": "watch:genTypes",
      "problemMatcher": [
        {
          "pattern": {
            "kind": "file",
            "regexp": "(^error:.*$)",
            "file": 1,
            "message": 1
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^start$",
            "endsPattern": "^end$"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch:all",
      "dependsOn": ["watch:web", "watch:ts", "watch:purs", "watch:genTypes"],
      "problemMatcher": []
    }
  ]
}
